<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ch.hslu.bierapp" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".BeerListActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddBeerActivity"
            android:label="@string/title_activity_add_beer" >
        </activity>
        <activity
            android:name=".BeerDetailActivity"
            android:label="@string/title_activity_beer_detail" >
        </activity>
        <activity
            android:name=".EditBeerActivity"
            android:label="@string/title_activity_edit_beer" >
        </activity>
    </application>

</manifest>
